<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

    >


        <TextView
                android:text="Is the FLHA date and time stamped throughout the day i.e after break, change in job conditions scope etc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:id="@+id/txtNameMC_scnd" android:layout_marginTop="32dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp" app:layout_constraintHorizontal_bias="0.0"/>
        <TextView
                android:text="Complete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtComplete"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="20dp"
                android:layout_marginTop="18dp"
                app:layout_constraintTop_toBottomOf="@+id/txtNameMC_scnd"/>
        <TextView
                android:text="Quality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtQuality"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="20dp"
                android:layout_marginTop="18dp"
                app:layout_constraintTop_toBottomOf="@+id/txtComplete"/>
        <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioGroupComp"
        android:orientation="horizontal"
        app:layout_constraintStart_toEndOf="@+id/txtComplete"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/txtNameMC_scnd"
        >
            <androidx.appcompat.widget.AppCompatRadioButton
                    android:text="Button"
                    app:buttonTint="@color/colorPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:id="@+id/radioB1"/>
            <androidx.appcompat.widget.AppCompatRadioButton
                    android:text="Button"
                    app:buttonTint="@color/colorPrimary"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioB2"/>
            <androidx.appcompat.widget.AppCompatRadioButton
                    android:text="Button"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_height="wrap_content"
                    app:buttonTint="@color/colorPrimary"
                    android:id="@+id/radioB3"/>
        </RadioGroup>

        <RadioGroup
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/radioGroupQuality"
        android:orientation="horizontal"
        app:layout_constraintStart_toEndOf="@+id/txtQuality"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="18dp"
        app:layout_constraintTop_toBottomOf="@+id/radioGroupComp"
        >
            <androidx.appcompat.widget.AppCompatRadioButton
                    android:text="Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    app:buttonTint="@color/colorPrimary"
                    android:id="@+id/radioB4" />
            <androidx.appcompat.widget.AppCompatRadioButton
                    android:text="Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    app:buttonTint="@color/colorPrimary"
                    android:id="@+id/radioB5"/>
        </RadioGroup>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
